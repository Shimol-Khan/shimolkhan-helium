<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title ,:label=>false, :placeholder=>"Title"%>
    <%= f.file_field :image %>
    <br><br>
    <%= f.association :category,:label=>false,prompt:"Please select a category"%>
    <%= f.input :body,:label=>false, :placeholder=>"Body",input_html:{rows:8}%>
    <%= f.association :user, as: :hidden %>
  </div>
  <div class="form-actions">
    <%= f.button :submit,:class=>"btn btn-md btn-success" %>
    <%= link_to "Back", posts_path,:class=>"btn btn-md btn-secondary" %>
  </div>
<% end %>

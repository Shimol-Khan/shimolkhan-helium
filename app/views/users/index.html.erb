<% provide(:page_title, "| Search People") %>

<div class="row justify-content-center">
	<div class="col-4" style="margin-top: 15px">
		<form class="form-inline md-form form-sm mt-0">
      <%= form_tag users_path, method: :get do %>
        <i class="fas fa-search" aria-hidden="true"></i>
        <%= text_field_tag :search, params[:search], :class=>'form-control form-control-sm ml-3 w-75', placeholder:'Search People'%>
      <% end %>
		</form>
	</div>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <tbody>
    	<% @users.each do |user| %>
      <tr>
        <% if !user.name.blank? %>
          <td><%= link_to user.name, user %></td>
        <% else %>
          <td>No Name Set</td>
        <% end %>
        <td><%= link_to user.email, user %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to "Back", root_path, :class=>"btn btn-sm btn-secondary btn-block", :style=>"margin-left: 0" %>
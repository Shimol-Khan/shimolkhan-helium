<% provide(:page_title, "| Edit Account") %>
<div class="row justify-content-center" style="margin-top: 5%">
  <div class="col" style="margin-bottom: -18px">
    <div class="card" style="padding: 20px">
      <div class="card-body">
        <h4 class="card-title text-center" style="padding-bottom: 10px">Edit Your Profile</h4>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-row mb-3">
            <div class="col">
                          <%= f.text_field :name,
                        placeholder: 'Full Name',
                        required: false,
                        class: 'form-control' %>
            </div>
            <div class="col">
                          <%= f.text_field :title,
                        placeholder: 'Title',
                        required: false,
                        class: 'form-control' %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col">
            <%= f.text_field :work,
                        placeholder: 'Work Place',
                        required: false,
                        class: 'form-control' %>
            </div>
            <div class="col">
              <label>Image</label>
              <%= f.file_field :image,
                          required: false %>
            </div>
          </div>


          <div class="form-group">
            <%= f.text_area :bio,
                        placeholder: 'Bio',
                        required: false,
                        rows: 8,
                        class: 'form-control' %>
          </div>

          <div class="form-row mb-3">
            <div class="col">
            <%= f.text_field :mobile_number,
                        placeholder: 'Mobile Number',
                        required: false,
                        class: 'form-control' %>
            </div>
            <div class="col">
            <%= f.text_field :address,
                        placeholder: 'Address',
                        required: false,
                        class: 'form-control' %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col">
            <%= f.text_field :fb_link,
                        placeholder: 'Full Facebook URL Including WWW',
                        required: false,
                        class: 'form-control' %>
            </div>
            <div class="col">
            <%= f.text_field :twitter_link,
                        placeholder: 'Full Twitter URL Including WWW',
                        required: false,
                        class: 'form-control' %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col">
            <%= f.text_field :ig_link,
                        placeholder: 'Full Instagram URL Including WWW',
                        required: false,
                        class: 'form-control' %>
            </div>
            <div class="col">
            <%= f.text_field :in_link,
                        placeholder: 'Full Linkedin URL Including WWW',
                        required: false,
                        class: 'form-control' %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col">
            <%= f.text_field :whatsapp_number,
                        placeholder: 'Whatsapp Number',
                        required: false,
                        class: 'form-control' %>
            </div>
            <div class="col">
            <%= f.text_field :github_link,
                        placeholder: 'GitHub URL Including WWW',
                        required: false,
                        class: 'form-control' %>
            </div>
          </div>


          <div class="form-group">
            <%= f.password_field :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                placeholder: 'Password',
                input_html: { autocomplete: "new-password" },class: 'form-control' %>
                <small>Leave it blank if you don't want to change password.</small>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation,
                required: false,
                placeholder: 'Confirm Password',
                input_html: { autocomplete: "new-password" },class: 'form-control' %>
                <small>Leave it blank if you don't want to change password.</small>
          </div>

          <div class="form-group">
            <%= f.password_field :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                placeholder: 'Current Password',
                input_html: { autocomplete: "current-password" },
                class: 'form-control' %>
                <small>We need your current password to make any changes.</small>
          </div>

          <div class="form-actions">
            <%= f.button "Update",:class=>"btn btn-md btn-success btn-block", data:{disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating ..."}%>
          </div>

          </div>
        <% end %>
      </div>
        <br>
      <div class="jumbotron" role="alert" style="padding: 20px 40px 3px 50px">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          </button>

          <strong>Sensitive Place!</strong> You should take responsibility of losing your account.
          <p>If you really want to parmanently delete your account, then hit the CANCEL MY ACCOUNT Button</p>
          
          <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete ,:class=>"btn btn-md btn-danger btn-block",:style=>"margin-left:0"%></p>
        </div>
    </div>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to root_path do %>
        <button class="btn btn-info btn-sm btn-block" style="margin-left: 0px">
          <i class="fas fa-arrow-left"></i>
        </button>
      <% end %>
    </div>
  </div>
</div>

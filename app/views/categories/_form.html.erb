
<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name ,:label=>false, :placeholder=>"Name"%>
    <%= f.file_field :image %>
    <br><br>
    <%= f.input :description,:label=>false, :placeholder=>"Description",input_html:{rows:8}%>
    <%= f.association :user, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,:class=>"btn btn-md btn-success" %>
    <%= link_to "Back", categories_path,:class=>"btn btn-md btn-secondary" %>
  </div>
<% end %>
